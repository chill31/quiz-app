// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

model Quiz {
  id          String     @id @unique @default(uuid())
  title       String
  description String
  questions   Question[]
  authorId    String
}

model Question {
  id      String   @id @unique @default(uuid())
  text    String
  quiz    Quiz     @relation(fields: [quizId], references: [id], onDelete: Cascade)
  quizId  String
  answer  Int
  options Option[]
}

model Option {
  id         Int      @id @unique @default(sequence()) // prisma generated ID
  text       String
  question   Question @relation(fields: [questionId], references: [id], onDelete: Cascade) // question relation
  questionId String // prisma generated ID
  isCorrect  Boolean  @default(false) // means whether THIS specific option is correct or not (true, false);
}
